touch make_x_debue.sh
chmod +x make_x_debue.sh
echo "cargo build --target armv7-unknown-linux-musleabihf" >> make_x_debue.sh

touch clean.sh
chmod +x clean.sh
echo "cargo clean" >> clean.sh

touch test.sh
chmod +x test.sh
